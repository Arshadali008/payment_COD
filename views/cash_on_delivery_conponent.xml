<odoo>
    <template id="CashOnDeliveryComponent" name="Cash On Delivery Component" inherit_id="website_sale.payment">
        <t t-if="state.codCharges > 0">
            <tr class="cod-charges-row">
                <td>
                    <strong>Cash on Delivery Charges</strong>
                </td>
                <td class="text-end">
                    <span>
                        <t t-esc="state.currency"/>
                        <t t-esc="state.codCharges.toFixed(2)"/>
                    </span>
                </td>
            </tr>
        </t>
    </template>
</odoo>